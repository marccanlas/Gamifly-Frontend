{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "paths": {
      "@/*": ["src/*"]
    },
    "incremental": false // 不生成tsconfig.tsbuildinfo文件
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "typings.d.ts", "src/utils/test.js"]
}